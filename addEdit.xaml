<Window x:Class="SeoulStay.addEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeoulStay"
        mc:Ignorable="d"
        Title="addEdit" Height="450" Width="800">
    <StackPanel Name="parent">
        <StackPanel Margin="20, 20, 20, 20">
            <StackPanel Orientation="Horizontal">
                <TabControl Name="myTabControl">
                    <TabItem Header="Listing Details" Name="tab0" TabIndex="0" IsEnabled="False">
                        <StackPanel Margin="10, 10, 10, 10">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Type" Width="100"></Label>
                                <ComboBox Name="typeCb" Width="150"></ComboBox>

                                <Label Content="Title" Margin="20, 0, 0,0 "></Label>
                                <TextBox Name="title" Width="150"></TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Capacity" Width="100"></Label>
                                <TextBox Name="capacity" Width="80"></TextBox>

                                <Label Content="No of Beds" Width="100"></Label>
                                <TextBox Name="beds" Width="80"></TextBox>

                                <Label Content="No of bedrooms" Width="100"></Label>
                                <TextBox Name="bedrooms" Width="80"></TextBox>

                                <Label Content="No of bathrooms" Width="100"></Label>
                                <TextBox Name="bathrooms" Width="80"></TextBox>
                            </StackPanel>
                            <StackPanel  Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Approximate Address: " Width="150"></Label>
                                <TextBox Name="aproxAddress" Width="500"></TextBox>
                            </StackPanel>
                            <StackPanel  Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Exact Address: " Width="150"></Label>
                                <TextBox Name="exactAddress" Width="500"></TextBox>
                            </StackPanel>
                            <StackPanel  Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Description: " Width="150"></Label>
                                <TextBox Name="desc" Width="500"></TextBox>
                            </StackPanel>
                            <StackPanel  Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Host Rules: " Width="150"></Label>
                                <TextBox Name="hostRules" Width="500"></TextBox>
                            </StackPanel>
                            <StackPanel  Orientation="Horizontal" Margin="0, 20, 0 ,0">
                                <Label Content="Reservation Time (Nights): "></Label>
                                <Label Content="Minimum: " Margin="20, 0, 0, 0"></Label>
                                <TextBox Name="min" Width="80"></TextBox>
                                <Label Content="Maximum: " Margin="20, 0, 0, 0"></Label>
                                <TextBox Name="max" Width="80"></TextBox>
                            </StackPanel>

                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 20, 0, 0">
                <Button Name="saveBtn" Content="Save" Width="100" Click="saveBtn_Click"></Button>
            </StackPanel>
        </StackPanel>
        
    </StackPanel>
</Window>
